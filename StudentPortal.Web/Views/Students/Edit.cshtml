@model Student
<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No Student was found with this id!</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label" for="Name">ID: </label>
            <input type="text" class="form-control" name="Id" id="Id" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label" for="Name">Name: </label>
            <input type="text" class="form-control" name="Name" id="Name" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label" for="Email">Email: </label>
            <input type="email" class="form-control" name="Email" id="Email" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label" for="Phone">Phone: </label>
            <input type="tel" class="form-control" name="Phone" id="Phone" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" name="Subscribed" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribe: </label>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>
            <button class="btn btn-danger ms-3" asp-controller="Students" asp-action="Delete">Delete</button>
        </div>
     
    </form>
}
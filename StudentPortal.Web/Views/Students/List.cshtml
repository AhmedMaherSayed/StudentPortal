@model List<Student>

<h1>Students</h1>

<table class="table table-bordered table-hover">
    <thead>
        <td>ID</td>
        <td>Name</td>
        <td>Email</td>
        <td>Phone</td>
        <td>Subscribed</td>
        <td>Actions</td>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>
                    @student.Id
                </td>
                <td>
                    @student.Name
                </td>
                <td>
                    @student.Email
                </td>
                <td>
                    @student.Phone
                </td>
                <td>
                    @student.Subscribed
                </td>
                <td>
                    <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>